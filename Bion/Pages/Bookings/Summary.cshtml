@page
@model Bion.Pages.Bookings.SummaryModel
@{
}


<div>
    <h4>MovieShowTime</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="TicketOrder.FirstName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TicketOrder.FirstName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="TicketOrder.LastName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TicketOrder.LastName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="TicketOrder.Email"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TicketOrder.Email
        </dd>
        <dt class="col-sm-2">
            <label asp-for="TicketOrder.Seats"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TicketOrder.Seats
        </dd>
        <dt class="col-sm-2">
            <label asp-for="TicketOrder.Price"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TicketOrder.Price
        </dd>


        <dt class="col-sm-2">
            <label asp-for="TicketOrder.MovieTitle"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TicketOrder.MovieTitle
        </dd>

        <dt class="col-sm-2">
            <label asp-for="TicketOrder.BookingNumber"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TicketOrder.BookingNumber
        </dd>

        <dt class="col-sm-2">
            <label asp-for="TicketOrder.SalongName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TicketOrder.SalongName
        </dd>

        <dt class="col-sm-2">
            <label asp-for="TicketOrder.Time"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.TicketOrder.Time
        </dd>

        
    </dl>
</div>

<form method="post">
    <p>Do you want to get a confirmation to your email?</p>
    <input type="hidden" asp-for="@Model.TicketOrder.Email" value="@Model.TicketOrder.Email" />
    <input type="hidden" asp-for="@Model.TicketOrder.MovieTitle" value="@Model.TicketOrder.MovieTitle" />
    <input type="hidden" asp-for="@Model.TicketOrder.Seats" value="@Model.TicketOrder.Seats" />
    <input type="hidden" asp-for="@Model.TicketOrder.Price" value="@Model.TicketOrder.Price" />
    <input type="hidden" asp-for="@Model.TicketOrder.BookingNumber" value="@Model.TicketOrder.BookingNumber" />
    <input type="hidden" asp-for="@Model.TicketOrder.SalongName" value="@Model.TicketOrder.SalongName" />
    <input type="hidden" asp-for="@Model.TicketOrder.Time" value="@Model.TicketOrder.Time" />
    
    
    <input type="submit" value="Yes" class="btn btn-primary my-3"/>
</form>
<div>
    <a asp-page="/Index" class="btn btn-danger">Back to List</a>
</div>
