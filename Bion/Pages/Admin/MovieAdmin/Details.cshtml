@page
@model Bion.Pages.Admin.MovieAdmin.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Movie.Title"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Movie.Title
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Movie.RunTimeInHours"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Movie.RunTimeInHours
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Movie.Id" class="btn btn-info">Edit</a> 
    <a asp-page="./Index" class="btn btn-primary">Back to List</a>
</div>
