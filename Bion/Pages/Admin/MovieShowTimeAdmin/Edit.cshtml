            <div class="form-group">
                <label asp-for="MovieShowTime.MovieScreeningTime" class="control-label"></label>
                <input asp-for="MovieShowTime.MovieScreeningTime" class="form-control" />
                <span asp-validation-for="MovieShowTime.MovieScreeningTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieShowTime.AvailableSeats" class="control-label"></label>
                <input asp-for="MovieShowTime.AvailableSeats" class="form-control" />
