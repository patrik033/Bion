@page
@model Bion.Pages.Admin.MovieShowTimeAdmin.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MovieShowTime</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="MovieShowTime.MovieScreeningTime"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.MovieShowTime.MovieScreeningTime
        </dd>
        <dt class="col-sm-2">
            <label asp-for="MovieShowTime.AvailableSeats"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.MovieShowTime.AvailableSeats
        </dd>
        <dt class="col-sm-2">
            <label asp-for="MovieShowTime.MaxNumberSeats"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.MovieShowTime.MaxNumberSeats
        </dd>
        <dt class="col-sm-2">
            <label asp-for="MovieShowTime.Cinema.CinemaName"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.MovieShowTime.Cinema.CinemaName
        </dd>
        <dt class="col-sm-2">
            <label asp-for="MovieShowTime.Movie.Title"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.MovieShowTime.Movie.Title
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="MovieShowTime.Id" />
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
            Delete
        </button>
        <a asp-page="./Index" class="btn btn-primary">Back to List</a>

        <!-- Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="submit" value="Delete" class="btn btn-primary mt-2" />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
